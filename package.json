{
  "name": "local-file-sharing-server",
  "version": "1.0.0",
  "description": "A standalone server for local network file sharing",
  "main": "app.js",
  "bin": {
    "file-share": "./app.js"
  },
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "build": "pkg . --output dist/file-sharing-server",
    "build:all": "npm run build:win && npm run build:mac && npm run build:linux",
    "build:win": "pkg . --targets node18-win-x64 --output dist/file-sharing-server-win.exe",
    "build:mac": "pkg . --targets node18-macos-x64 --output dist/file-sharing-server-macos",
    "build:linux": "pkg . --targets node18-linux-x64 --output dist/file-sharing-server-linux",
    "global": "npm install -g .",
    "test": "node app.js --help"
  },
  "pkg": {
    "scripts": [
      "app.js"
    ],
    "assets": [
      "node_modules/**/*"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "commander": "^11.0.0",
    "chalk": "^4.1.2",
    "qrcode-terminal": "^0.12.0",
    "open": "^8.4.2"
  },
  "devDependencies": {
    "pkg": "^5.8.1",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "file-sharing",
    "local-network",
    "server",
    "cli",
    "cross-platform"
  ],
  "author": "Zack",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ifamec/local-file-sharing-server.git"
  },
  "bugs": {
    "url": "https://github.com/ifamec/local-file-sharing-server/issues"
  },
  "homepage": "https://github.com/ifamec/local-file-sharing-server#readme"
}